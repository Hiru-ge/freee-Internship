        if (currentEmployeeId) { // å®Ÿéš›ã®IDãŒè¨­å®šã•ã‚Œã¦ã„ã‚‹å ´åˆã®ã¿ã‚¨ãƒ©ãƒ¼è¡¨ç¤º
          document.querySelector('#personal-wage-gauge .gauge-text').textContent = 'ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ';
        }
