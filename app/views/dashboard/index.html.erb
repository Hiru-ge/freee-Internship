<div class="dashboard-container">
  <h1>ダッシュボード</h1>

  <!-- ユーザー情報 -->
  <div class="user-info">
    <span id="user-name"><%= @employee_name %></span>
    <span id="user-role"><%= @is_owner ? 'オーナー' : '従業員' %></span>
  </div>

  <!-- 打刻機能（メインエリア） -->
  <div class="time-clock-section main-section">
    <h2>勤怠打刻</h2>
    <div class="time-clock-buttons">
      <button id="clock-in-btn" class="button clock-in main-button">出勤</button>
      <button id="clock-out-btn" class="button clock-out main-button">退勤</button>
    </div>
    <div id="clock-status" class="clock-status"><%= @clock_status[:message] %></div>
  </div>

  <!-- 勤怠履歴 -->
  <div class="attendance-history-section">
    <h3 id="attendance-title">勤怠履歴
      <span class="month-navigation-buttons">
        <button class="button" data-action="prev-month">前月</button>
        <button class="button" data-action="next-month">次月</button>
      </span>
    </h3>
    <div id="attendance-container">
      <p>勤怠履歴を読み込んでいます...</p>
    </div>
  </div>

  <!-- メッセージ表示 -->
  <div id="message" class="message hidden"></div>
</div>

