<div class="form-container">
  <h1>パスワード変更</h1>
  <p class="form-description">現在のパスワードを入力し、新しいパスワードを設定してください。</p>

  <%= form_with url: auth_password_change_path, method: :post, local: true, id: "password-change-form" do |form| %>
    <div class="form-group">
      <div class="form-row">
        <label for="current-password" class="form-label">現在のパスワード:</label>
        <%= form.password_field :current_password, required: true, id: "current-password", class: "form-input", placeholder: "現在のパスワードを入力" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <label for="new-password" class="form-label">新しいパスワード:</label>
        <%= form.password_field :new_password, required: true, id: "new-password", class: "form-input", placeholder: "新しいパスワードを入力" %>
      </div>
      <div class="form-help">
        <small>パスワード要件:</small>
        <ul>
          <li>8文字以上</li>
          <li>英字と数字を含む</li>
          <li>特殊文字を含む（推奨）</li>
        </ul>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <label for="confirm-password" class="form-label">パスワード（確認）:</label>
        <%= form.password_field :confirm_password, required: true, id: "confirm-password", class: "form-input", placeholder: "パスワードを再入力" %>
      </div>
    </div>

    <div class="form-buttons">
      <%= form.submit "パスワードを変更", class: "form-button" %>
    </div>
  <% end %>
</div>
